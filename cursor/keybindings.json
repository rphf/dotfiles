[
  // ===== WORKBENCH NAVIGATION =====
  {
    "key": "cmd+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },

  // ===== EDITOR NAVIGATION =====
  {
    "key": "ctrl+h",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "shift+cmd+[",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "shift+cmd+]",
    "command": "-workbench.action.nextEditor"
  },

  // ===== CURSOR COMPOSER =====
  {
    "key": "shift+cmd+e",
    "command": "composer.showBackgroundAgentHistory",
    "when": "backgroundComposerEnabled || showBackgroundAgentHistoryAction"
  },
  {
    "key": "cmd+e",
    "command": "-composer.showBackgroundAgentHistory",
    "when": "backgroundComposerEnabled || showBackgroundAgentHistoryAction"
  },

  // ===== TURBO CONSOLE LOG =====
  {
    "key": "alt+l",
    "command": "turboConsoleLog.deleteAllLogMessages"
  },
  {
    "key": "shift+alt+d",
    "command": "-turboConsoleLog.deleteAllLogMessages"
  },
  {
    "key": "cmd+l",
    "command": "turboConsoleLog.displayLogMessage"
  },
  {
    "key": "ctrl+alt+l",
    "command": "-turboConsoleLog.displayLogMessage"
  },
  {
    "key": "cmd+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm",
    "when": "workbench.scm.active"
  },

  // ===== VSCODE-NEOVIM MULTI-CURSOR =====
  // Send Cmd+D to Neovim (following official README implementation)
  {
    "key": "cmd+d",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.init",
    "args": "<D-d>"
  },
  // Send Ctrl+D to Neovim as alternative
  {
    "key": "ctrl+d",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.init",
    "args": "<C-d>"
  }
]
